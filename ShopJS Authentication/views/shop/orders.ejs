<%- include("../includes/header.ejs") -%>
<body>
    <%- include("../includes/nav.ejs") -%>
    <main>
        <% if (orders.length <= 0) { %>
            <h1>Nothing there</h1>
        <% } else { %>
            <% orders.forEach(order => { %>
                <div class="order">
                    <h2>Order - #<%= order._id %> - <a href="/orders/<%= order._id %>">Invoice</a></h2>
                    <div class="order-row">
                        <% order.products.forEach(p => { %>
                            <h2 class="order-item"><%= p.product.title %> - (<%= p.quantity %>)</h2>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </main>
    <%- include("../includes/footer.ejs") -%>
</body>