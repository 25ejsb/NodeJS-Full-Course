<%- include("../includes/header.ejs") %>
<body>
    <%- include("../includes/nav.ejs") %>
    <main>
        <h1>New Password</h1>
        <form class="newpassword-form" action="/new-password" method="POST">
            <div class="form-control">
                <label for="password">New Password</label>
                <input type="password" name="password">
            </div>
            <div class="form-control">
                <label for="confirm-password">Confirm Password</label>
                <input type="password" name="confirmPassword">
            </div>
            <h2 style="background-image: linear-gradient(to right, pink, blue, lightblue); -webkit-background-clip: text; color: transparent;"><%= errorMessage %></h2>
            <input name="userId" type="hidden" value="<%= userId %>">
            <input name="passwordToken" type="hidden" value="<%= passwordToken %>">
            <input name="_csrf" type="hidden" value="<%= csrfToken %>">
            <button type="submit">New Password</button>
        </form>
    </main>
    <%- include("../includes/footer.ejs") %>
</body>